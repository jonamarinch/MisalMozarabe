<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado por defecto -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp" /> <!-- Bordes redondeados -->
            <solid android:color="#FFFFFF" /> <!-- Fondo blanco -->
            <stroke
                android:width="1dp"
                android:color="#E0E0E0" /> <!-- Borde gris claro -->
            <padding
                android:left="8dp"
                android:right="8dp"
                android:top="12dp"
                android:bottom="12dp"/>
        </shape>
    </item>
</selector>